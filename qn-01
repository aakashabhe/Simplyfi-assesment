def convert_to_indian_currency(number):
    number_str = str(number)
    if len(number_str) > 3:
        last_three_digits = number_str[-3:]
        remaining_digits = number_str[:-3]
        remaining_digits = ','.join([remaining_digits[max(i-2, 0):i] for i in range(len(remaining_digits), 0, -2)][::-1])
        formatted_number = remaining_digits + ',' + last_three_digits
    else:
        formatted_number = number_str
    return formatted_number
input_value = 504678
output_value = convert_to_indian_currency(input_value)
print(f"Input: {input_value}")
print(f"Output: {output_value}")
